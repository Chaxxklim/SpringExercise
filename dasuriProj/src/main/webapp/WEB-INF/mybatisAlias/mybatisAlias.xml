<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!--  마이바티스, 스프링에서 "_"를 사용한 컬럼명 사용할 때 mapUnderscoreToCamelCase를 통해
	테이블 컬럼명에 "_"가 있을 경우 카멜케이스로 읽어줌. ex)  컬럼이 member_id 인 경우 jsp View단에서 이값을 사용해서 memberId로 사용-->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	<!--  자주 사용하는 타입의 별칭 -->
	<typeAliases>
		<typeAlias type="kr.or.ddit.emp.vo.EmpVO" alias="empVo"/>
		<typeAlias type="kr.or.ddit.cus.vo.CusVO" alias="cusVo"/>
		<typeAlias type="kr.or.ddit.car.vo.CarVO" alias="CarVo"/>
		<typeAlias type="kr.or.ddit.repSer.vo.RepSerVO" alias="repSerVo"/>
		<typeAlias type="kr.or.ddit.article.vo.ArticleVO" alias="articleVo"/>
	</typeAliases>
</configuration>